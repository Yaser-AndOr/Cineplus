@model IEnumerable<Cineplus.Ranking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Puntaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoVotos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pelicula.Titulo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Puntaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoVotos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pelicula.Titulo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDRanking }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDRanking }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDRanking })
        </td>
    </tr>
}

</table>
